#right angle triangle 
rows=int(input("Enter the number of rows:"))
for i in range(1,rows+1):
    print("*"*i)

#inverted right ""
rows=int(input("Enter the number of rows:"))
for i in range(rows,0,-1):
    print("*"*i)

#pyramid
rows=int(input("Enter the number of rows:"))
for i in range(1,rows+1):
    print(""(rows-i)+"*"*(2*i-1))

#inverted pyramid
rows=int(input("Enter the number of rows:"))
for i in range (rows,0,-1):
    print(""(rows-i)+"*"*(2*i-1))
